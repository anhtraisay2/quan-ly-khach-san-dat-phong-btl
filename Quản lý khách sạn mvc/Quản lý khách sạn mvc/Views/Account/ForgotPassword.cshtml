@model Quản_lý_khách_sạn_mvc.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow">
            <div class="card-header bg-warning text-white text-center">
                <h3><i class="bi bi-key"></i> Quên mật khẩu</h3>
            </div>
            <div class="card-body">
                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger text-center">
                        @Html.ValidationSummary()
                    </div>
                }
                <form asp-action="ForgotPassword" method="post" autocomplete="off">
                    <div class="mb-3">
                        <label for="TenDangNhap" class="form-label">Tên đăng nhập</label>
                        <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" />
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email đã đăng ký" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-warning w-100">
                        <span id="forgotText">Gửi yêu cầu</span>
                        <span id="forgotLoading" style="display:none"><i class="bi bi-arrow-repeat"></i> Đang xử lý...</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<script>
    document.querySelector('form').addEventListener('submit', function() {
        document.getElementById('forgotText').style.display = 'none';
        document.getElementById('forgotLoading').style.display = 'inline-block';
    });
</script>