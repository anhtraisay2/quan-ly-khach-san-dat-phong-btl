@model Quản_lý_khách_sạn_mvc.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white text-center">
                <h3><i class="bi bi-person-circle"></i> Đăng nhập hệ thống</h3>
            </div>
            <div class="card-body">
                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger text-center">
                        @Html.ValidationSummary()
                    </div>
                }
                <form asp-action="Login" method="post" autocomplete="off">
                    <div class="mb-3">
                        <label for="TenDangNhap" class="form-label">Tên đăng nhập</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" />
                        </div>
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="MatKhau" class="form-label">Mật khẩu</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                        </div>
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">
                        <span id="loginText">Đăng nhập</span>
                        <span id="loginLoading" style="display:none"><i class="bi bi-arrow-repeat"></i> Đang xử lý...</span>
                    </button>
                    <div class="mt-3 text-center">
                        <a asp-action="Register" class="link-success">Đăng ký tài khoản mới</a> |
                        <a asp-action="ForgotPassword" class="link-warning">Quên mật khẩu?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<script>
    document.querySelector('form').addEventListener('submit', function() {
        document.getElementById('loginText').style.display = 'none';
        document.getElementById('loginLoading').style.display = 'inline-block';
    });
</script>