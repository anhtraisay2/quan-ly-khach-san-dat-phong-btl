@model Quản_lý_khách_sạn_mvc.Models.GiaViewModel

@{
    ViewData["Title"] = "Xóa giá phòng";
}

<h2>Xóa giá phòng</h2>
<div class="alert alert-warning">Bạn có chắc chắn muốn xóa giá phòng này?</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MaGia" />
    <div class="form-group">
        <label>Loại phòng:</label>
        <span>@Model.MaLoaiPhong</span>
    </div>
    <div class="form-group">
        <label>Từ ngày:</label>
        <span>@Model.TuNgay.ToString("dd/MM/yyyy")</span>
    </div>
    <div class="form-group">
        <label>Đến ngày:</label>
        <span>@Model.DenNgay.ToString("dd/MM/yyyy")</span>
    </div>
    <div class="form-group">
        <label>Giá mỗi đêm:</label>
        <span>@Model.GiaMoiDem.ToString("N0")</span>
    </div>
    <div class="form-group">
        <label>Giá mỗi giờ:</label>
        <span>@(Model.GiaMoiGio.HasValue ? Model.GiaMoiGio.Value.ToString("N0") : "-")</span>
    </div>
    <div class="form-group">
        <label>Ghi chú:</label>
        <span>@Model.GhiChu</span>
    </div>
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
