@model List<Quản_lý_khách_sạn_mvc.Models.LoaiPhongViewModel>

<h2>Danh sách loại phòng</h2>
<a class="btn btn-success mb-2" asp-action="Create">Thêm mới loại phòng</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã loại phòng</th>
            <th>Mã</th>
            <th>Tên loại phòng</th>
            <th>Mô tả</th>
            <th>Số khách tối đa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loaiPhong in Model)
        {
            <tr>
                <td>@loaiPhong.MaLoaiPhong</td>
                <td>@loaiPhong.Ma</td>
                <td>@loaiPhong.Ten</td>
                <td>@loaiPhong.MoTa</td>
                <td>@loaiPhong.SoKhachToiDa</td>
            </tr>
        }
    </tbody>
</table>
