@model Quản_lý_khách_sạn_mvc.Models.PhongViewModel
<h2>Thêm mới phòng</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="SoPhong">Số phòng</label>
        <input type="text" class="form-control" id="SoPhong" name="SoPhong" required />
    </div>
    <div class="form-group">
        <label for="MaLoaiPhong">Mã loại phòng</label>
        <input type="text" class="form-control" id="MaLoaiPhong" name="MaLoaiPhong" required />
    </div>
    <div class="form-group">
        <label for="TinhTrang">Tình trạng</label>
        <input type="text" class="form-control" id="TinhTrang" name="TinhTrang" required />
    </div>
    <button type="submit" class="btn btn-success">Thêm phòng</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>